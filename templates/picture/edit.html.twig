            <h1 class="mb-3">Modifier l'image</h1>

            <div class="mb-4">
                <img
                    src="{{ asset('uploads/' ~ picture.path) }}"
                    alt="{{ picture.title }}"
                    title="{{ picture.title }}"
                    class="img-thumbnail img-show"
                />
            </div>

            {{ include('picture/_form.html.twig', {'button_label': 'Modifier'}) }}

