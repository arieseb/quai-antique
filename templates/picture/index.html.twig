{% extends 'base.html.twig' %}

{% block title %}Liste des images{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-3 text-center">Liste des images</h1>
        <a href="{{ path('app_picture_new') }}" class="btn btn-primary mb-3">Ajouter une nouvelle image</a>
        <table class="table table-primary table-borderless table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titre</th>
                    <th class="text-center">Aperçu</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for picture in pictures %}
                <tr>
                    <td>{{ picture.id }}</td>
                    <td>{{ picture.title }}</td>
                    <td class="text-center">
                        <img
                            src="{{ asset('uploads/' ~ picture.path) }}"
                            alt="{{ picture.title }}"
                            title="{{ picture.title }}"
                            class="img-thumbnail img-index"
                        />
                    </td>
                    <td>
                        <div class="d-flex justify-content-center">
                            <a href="{{ path('app_picture_show', {'id': picture.id}) }}" class="btn btn-primary me-2">Voir</a>
                            <a href="{{ path('app_picture_edit', {'id': picture.id}) }}" class="btn btn-primary me-2">Modifier</a>
                            {{ include('picture/_delete_form.html.twig') }}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucune image trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_picture_new') }}" class="btn btn-primary">Ajouter une nouvelle image</a>
    </div>
{% endblock %}
