{% extends 'base.html.twig' %}

{% block title %}{{ picture.title }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex flex-column align-items-center">
        <h1 class="mb-3">Image "{{ picture.title }}"</h1>

        <table class="table table-primary table-borderless table-hover w-50">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ picture.id }}</td>
                </tr>
                <tr>
                    <th>Titre</th>
                    <td>{{ picture.title }}</td>
                </tr>
                <tr>
                    <th>Aperçu</th>
                    <td class="text-center">
                        <img
                            src="{{ asset('uploads/' ~ picture.path) }}"
                            alt="{{ picture.title }}"
                            title="{{ picture.title }}"
                            class="img-thumbnail img-show"
                        />
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="d-flex mb-3">
            <a href="{{ path('app_picture_edit', {'id': picture.id}) }}" class="btn btn-primary me-2">Modifier</a>
            {{ include('picture/_delete_form.html.twig') }}
        </div>
        <a href="{{ path('app_picture_index') }}">Retour à la liste des images</a>
    </div>
</div>
{% endblock %}
