{% extends 'base.html.twig' %}

{% block body %}
    <div class="carousel-wrapper d-flex flex-row justify-content-center">
        <div id="carousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                {% for picture in pictures %}
                    <button
                        type="button"
                        data-bs-target="carousel"
                        data-bs-slide-to="{{ loop.index0 }}"
                        class="active"
                        aria-label="Slide {{ loop.index0 }}">
                    </button>
                {% endfor %}
            </div>
            <div class="carousel-inner">
                {% for picture in pictures %}
                    <div class="carousel-item active" data-bs-interval="2500">
                        <img
                            src="{{ asset('uploads/' ~ picture.path) }}"
                            alt="{{ picture.title }}"
                            class="d-block custom-carousel-item"
                        />
                        <div class="carousel-caption d-none d-md-block pictures">
                            <h5>{{ picture.title }}</h5>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Précédent</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Suivant</span>
            </button>
        </div>
    </div>
    <h3>Service du midi</h3>
    {% set noon_booking_link = path('app_booking_noon') %}
    <a class="btn btn-primary" href="{{ noon_booking_link }}">Réserver une table</a>
    <h3>Service du soir</h3>
    {% set evening_booking_link = path('app_booking_evening') %}
    <a class="btn btn-primary" href="{{ evening_booking_link }}">Réserver une table</a>
{% endblock %}